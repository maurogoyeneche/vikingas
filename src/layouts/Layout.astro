---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/src/images/vikingas.ico" />
    <meta name="generator" content={Astro.generator} />
    <!-- Metadatos Open Graph (para Facebook, LinkedIn, etc.) -->
    <meta
      property="og:title"
      content="VIKINGAS - Ritual de Belleza - Peluquería"
    />
    <meta
      property="og:description"
      content="Cuidando tu belleza con el arte que mereces. Encuentra tu ritual de relajación y cuidado personal con nosotros."
    />
    <meta property="og:image" content="/public/vkngs.png" />
    <!-- Ruta de tu imagen -->
    <meta property="og:url" content="https://vikingas.uy" />
    <meta property="og:type" content="website" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <!-- Metadatos para Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="VIKINGAS - Ritual de Belleza" />
    <meta
      name="twitter:description"
      content="Cuidando tu belleza con el arte que mereces. Encuentra tu ritual de relajación y cuidado personal con nosotros."
    />
    <meta name="twitter:image" content="/public/vhngs.png" />
    <!-- Ruta de tu imagen -->

    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    font-family: system-ui, sans-serif;
    background: black;
  }
